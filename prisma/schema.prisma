generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id         String    @id @default(uuid())
  name       String
  isVerified Boolean   @default(false)
  verifiedAt DateTime?
  createdAt  DateTime  @default(now())

  invites AccountInvite[]

  members            AccountMember[]
  verificationTokens AccountVerificationToken[] @relation("AccountToVerificationToken")
}

model AccountInvite {
  id         String    @id @default(uuid())
  accountId  String
  email      String
  role       String
  token      String    @unique
  expiresAt  DateTime
  acceptedAt DateTime?

  account Account @relation(fields: [accountId], references: [id])

  @@index([email])
}

model AccountVerificationToken {
  id        String   @id @default(uuid())
  accountId String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  account Account @relation("AccountToVerificationToken", fields: [accountId], references: [id])

  @@unique([accountId])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  memberships AccountMember[]
  tokens      RefreshToken[]
}

model AccountMember {
  id        String      @id @default(uuid())
  accountId String
  userId    String
  role      AccountRole @default(MEMBER)
  createdAt DateTime    @default(now())

  account Account @relation(fields: [accountId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@unique([accountId, userId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  USER
}

enum AccountRole {
  OWNER
  ADMIN
  MEMBER
}
